<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:id="@+id/card_reportComments_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="علی رحیم زاده"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/txt_reportComments_userName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/txt_reportComments_userName"
            tools:text="HEY"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:id="@+id/txt_reportComments_comment"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey500"
            android:layout_below="@+id/txt_reportComments_comment"
            />

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:id="@+id/rel_reportCommentsRv_like"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reportComments_userName"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:id="@+id/txt_reportComments_like"
                android:textColor="@color/colorRed"
                android:layout_toRightOf="@+id/img_reportComments_like"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_like_border_black_24dp"
                android:tint="@color/colorRed"
                android:id="@+id/img_reportComments_like"
                android:layout_centerVertical="true"
                />



        </RelativeLayout>

        <TextView
            android:id="@+id/txt_reportComments_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="در انتظار بازدید مدیر"
            android:textColor="@color/colorWhite2"
            android:background="@drawable/shape_mycomments_confirm0"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_reportComments_reason"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            />


        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txt_reportComments_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="مشکل شرعی دارد"
            android:layout_below="@+id/rel_reportCommentsRv_like"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorWhite2"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_mycomments_confirm1"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>