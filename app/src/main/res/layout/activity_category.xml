<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGrey100"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoryActivity.ActivityCategory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دسته بندی ها"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite2"
            android:layout_margin="16dp"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="13dp"
            android:tint="@color/colorWhite2"
            android:id="@+id/img_cat_back"
            android:foreground="?attr/selectableItemBackground"
            />

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorWhite2"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/colorWhite2"
        android:id="@+id/tl_cat_tabLayout"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_cat_viewPager"
        />

</LinearLayout>