<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/card_allCatsItem_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_perm_identity_black_24dp"
            android:scaleType="centerCrop"
            android:id="@+id/img_allCatsItem_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ته چین مرغ"
            android:layout_below="@+id/img_allCatsItem_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:id="@+id/txt_allCatsItem_title"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>