<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_toLeftOf="@id/rel_howTo_number"
        android:id="@+id/rel_howTo_title"
        android:background="@color/colorGrey100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:lineSpacingExtra="6dp"
            android:id="@+id/txt_howTo_desc"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سلام من جوادمسلام من جوادمسلام من جوادمسلام من جوادمسلام من جوادمسلام من جوادمسلام من جوادمسلام من جوادم"
            android:textColor="@color/colorBlack"
            android:layoutDirection="rtl"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning_black_24dp"
            android:layout_below="@id/txt_howTo_desc"
            android:layout_alignParentRight="true"
            android:id="@+id/img_howTo_warn"
            android:tint="@color/colorRedDark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_howTo_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRedDark"
            tools:text="هشدار : "
            android:layout_below="@+id/txt_howTo_desc"
            android:layout_toLeftOf="@+id/img_howTo_warn"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/rel_howTo_number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/txt_howTo_number"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hey"
            android:layoutDirection="rtl"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey500"
        android:layout_below="@+id/rel_howTo_title"/>


</RelativeLayout>