<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingRight="32dp"
        android:layout_width="290dp"
        android:layout_height="32dp"
        android:background="@color/colorPrimary"
        />

    <RelativeLayout
        android:paddingRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/colorGreenLight"
            android:id="@+id/img_helpTimeDialog_1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کمتر از 30 دقیقه                 "
            android:layout_toRightOf="@+id/img_helpTimeDialog_1"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/colorGreenDark"
            android:id="@+id/img_helpTimeDialog_2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بین 30 دقیقه تا 60 دقیقه  "
            android:layout_toRightOf="@+id/img_helpTimeDialog_2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/colorPrimary"
            android:id="@+id/img_helpTimeDialog_3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بین 60 دقیقه تا 90 دقیقه  "
            android:layout_toRightOf="@+id/img_helpTimeDialog_3"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="30dp"

        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/img_helpTimeDialog_4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بین 90 دقیقه تا 120 دقیقه"
            android:layout_toRightOf="@+id/img_helpTimeDialog_4"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/colorRed"
            android:id="@+id/img_helpTimeDialog_5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بیشتر از 120 دقیقه            "
            android:layout_toRightOf="@+id/img_helpTimeDialog_5"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بستن"
            android:background="@drawable/shape_empty"
            android:layout_gravity="right"
            android:layout_marginTop="24dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/btn_helpTime_close"/>



</LinearLayout>